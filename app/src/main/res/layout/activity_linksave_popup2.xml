<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#4D000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/roundedtest"
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_discard2"
            android:textColor="#D5D5D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:layout_margin="10dp"
            android:text="Discard" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:text="New Link"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_save2"
            android:textColor="#0091FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:layout_margin="10dp"
            android:text="Save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_url2"
            android:hint="Link_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="LINK_TAG"
            android:id="@+id/edit_tag2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="LINK_DESCRIPTION"
            android:id="@+id/edit_des2"
            android:layout_marginTop="10dp"
            android:height="100dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>