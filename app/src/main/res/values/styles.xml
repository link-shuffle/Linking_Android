<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@drawable/background</item>
        <item name="colorPrimary">#f4f4f4</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:titleTextStyle">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    
    <style name="TextShadow">
        <item name="android:shadowColor">#000012</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/actionbarcolor</item>               <!-- 배경 -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/colorPrimary</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@color/colorPrimary</item>                    <!-- 하단 움직이는 바 색-->
    </style>
</resources>